<p id="notice"></p>

<h1><%= @user.name %>さんのマイページ</h1>

<p>
  <strong>名前:</strong>
  <%= @user.name %>
</p>

<p>
  <strong>Eメールアドレス:</strong>
  <%= @user.email %>
</p>

<p>
  <strong>マイアイコン:</strong>
  <%= image_tag @user.image %>
</p>

<button type="button" class="btn btn-danger">
  <%= link_to 'マイページの内容の変更', edit_user_path(@user) %>
</button><br>

<h1><%= @user.name %>さんの参加予定ヨガイベント</h1>

<table>
  <thead>
    <tr>
      <th><%= "開催者名" %></th>
      <th><%= "ヨガイベント名" %></th>
      <th><%= "イベント内容" %></th>
      <th><%= "画像イメージ" %></th>
    </tr>
  </thead>

  <tbody>
    <% @favorite_events.each do |favorite_events|%>
      <tr>
        <td><%= favorite_events.user.name %></td>
        <td><%= favorite_events.title %></td>
        <td><%= favorite_events.content %></td>
        <td><%= image_tag favorite_events.image.url(:thumb) %></td>
      </tr>
    <%end%>
  </tbody>
</table>
