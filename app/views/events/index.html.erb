<p id="notice"></p>

<h1>Events</h1>

<%= search_form_for @q do |f|%>
  <%= f.label :title_cont %>
  <%= f.search_field :title_cont %>

  <%= f.submit %>
<% end %>

<%= sort_link(@q, :title, 'Last Name',default_order: :desc) %>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th>Image</th>
      <th>User_Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @lists.each do |list| %>
      <tr>
        <td><%= list.title %></td>
        <td><%= list.content %></td>
        <td><%= image_tag list.image %></td>
        <td><%#= favorites_users.name %></td>
        <td><%= link_to 'Show', list %></td>
        <% if current_user.id == list.user_id %>
          <td><%= link_to 'Edit', edit_event_path(list) %></td>
          <td><%= link_to 'Destroy', list, method: :delete, data: { confirm: 'イベントを削除して良いですか？' } %></td>
        <% end%>
      </tr>
    <% end %>
  </tbody>
</table>

